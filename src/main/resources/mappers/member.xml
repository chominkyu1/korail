<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!-- user.xml -->
<mapper namespace="member">
	<select id="writerInfo" resultType="memberVO">
	select member_Id, member_Loginid, member_Name, member_Gender, member_Birth, member_Profile
	from member
	where member_Id=#{member_Id}
	</select>
	
	<select id="login" resultType="memberVO">
		select *
		from member
		where member_Loginid=#{member_Loginid} and member_Pw=#{member_Pw}
	</select>

	<!-- 회원가입 -->
	<insert id="insert">
		Insert into MEMBER (MEMBER_ID,MEMBER_LOGINID,MEMBER_PW,MEMBER_NAME,MEMBER_QUES,MEMBER_ANSWER,MEMBER_ADDR,MEMBER_GENDER,MEMBER_BIRTH,MEMBER_TYPE,MEMBER_PROFILE,MEMBER_REGIDATE,MEMBER_PHONE)
		values ('M'||lpad(seq_M.nextval,3,0),#{member_Loginid},#{member_Pw},#{member_Name},#{member_Ques},#{member_Answer},#{member_Addr},#{member_Gender},#{member_Birth},'회원',#{member_Profile},sysdate,#{member_Phone})
	</insert>
