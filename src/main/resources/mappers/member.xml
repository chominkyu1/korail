		values ('M'||lpad(seq_M.nextval,3,0),'member','member','아이이잉','1','토스트','서울시 
		강남구 도곡동 193- 21 213호','여성',sysdate,'회원','C:\Users\Playdata\Desktop\erd\토스트가좋아.jpg',sysdate,'01022222222') 
		</insert> -->

	<!-- id찾기 -->
	<select id="idsearch" resultType="string">
		select member_loginid
		from
		member
		where member_name=#{member_Name} and
		member_phone=#{member_Phone}
	</select>
	<!-- pw찾기 -->
	<update id="pwsearch">
		update member set member_pw = #{member_Pw}
		where
		member_name=#{member_Name} and member_phone=#{member_Phone}
	</update>
	<!-- 멤버탈퇴 -->
	<delete id="membersecession">
		delete from member
		where member_id=#{member_id}
	</delete>
	
</mapper>


















